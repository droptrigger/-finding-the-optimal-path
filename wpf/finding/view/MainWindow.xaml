<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel x:Name="ControlPanel" VerticalAlignment="Center" HorizontalAlignment="Left" Width="518" Margin="217,0,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="X:" VerticalAlignment="Center" FontSize="45" Margin="0, 0, 8, 0"/>
                <TextBox x:Name="InputX" MaxLength="4" Width="458" Height="60" BorderBrush="Black" FontSize="45" VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Y:" VerticalAlignment="Center" FontSize="45" Margin="0, 0, 9.67, 0"/>
                <TextBox x:Name="InputY" MaxLength="4" Width="458" Height="60" BorderBrush="Black" FontSize="45" VerticalContentAlignment="Center"/>
            </StackPanel>
            <Button x:Name="btnGenerate" 
                    Content="ГЕНЕРИРОВАТЬ" 
                    FontSize="40" 
                    VerticalContentAlignment="Center"
                    Background="White" 
                    Margin="29, 0 ,0 ,0"
                    BorderThickness="1" Click="btnGenerate_Click" Height="86" Width="457.75" BorderBrush="Black"/>
        </StackPanel>
    </Grid>
</Window>
